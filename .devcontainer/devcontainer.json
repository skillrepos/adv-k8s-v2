{
  "name": "Codespace to perform Advanced Kubernetes Labs",
  "remoteEnv": {
    "INSTALLATION_TYPE": "labs"
  },
  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb",
    "storage": "32gb"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "files.autoSave": "onFocusChange",
        "editor.tabSize": 2
      },
      "workbench.editorAssociations": {
          "*.md": "vscode.markdown.preview.editor"
      },
      "extensions": [
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "postCreateCommand": "echo alias k=kubectl >> ~/.bash_aliases" 
}
